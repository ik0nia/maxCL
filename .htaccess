Options -Indexes

<IfModule mod_rewrite.c>
RewriteEngine On

# Protejează directoare / fișiere sensibile dacă proiectul este copiat în public_html
RewriteRule ^(app|database|docker|storage)(/|$) - [F]
RewriteRule ^(\.env|vendor_stub\.php)(/|$) - [F]

# Dacă document root NU este /public, atunci forwardează orice rută către /public
# Exemplu: /setup/run -> /public/setup/run
RewriteCond %{REQUEST_URI} !^/public/ [NC]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

